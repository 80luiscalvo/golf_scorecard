ScreenManager:
    HomeScreen:
        name: "home"
    SettingsScreen:
        name: "settings"
    ScoreScreen:
        name: "score"

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Welcome to the Golf Scorecard App"
            font_size: 24

        Button:
            text: "Start"
            on_release: app.root.current = "settings"

<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Settings"
            font_size: 24

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            Label:
                text: "Handicap:"
            TextInput:
                input_filter: 'int'
                text: str(root.handicap)
                on_text: root.handicap = int(self.text) if self.text.isdigit() else 0

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            Label:
                text: "Select Course:"
            Spinner:
                text: "Select Course"
                values: root.course_names
                on_text: root.update_selected_course(self.text)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            Label:
                text: "PIN Number:"
            Label:
                text: root.pin_number  # Display the generated PIN here

        Button:
            text: "Save & Go"
            on_release:
                root.save_user_data()
                app.root.current = "score"

        Button:
            text: "Home"
            on_release: app.root.current = "home"  # Home button to go back to HomeScreen

<ScoreScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Scorecard for " + root.player_name
            font_size: 24

        ScrollView:
            GridLayout:
                cols: 2
                spacing: 5
                size_hint_y: None
                height: self.minimum_height

                Label:
                    text: "Hole"
                    bold: True
                Label:
                    text: "Score"
                    bold: True

                # Dynamically create score inputs for each hole
                Label:
                    text: "Hole 1"
                TextInput:
                    input_filter: 'int'
                    on_text: root.update_score(1, int(self.text) if self.text.isdigit() else 0)

                Label:
                    text: "Hole 2"
                TextInput:
                    input_filter: 'int'
                    on_text: root.update_score(2, int(self.text) if self.text.isdigit() else 0)

                # Additional holes dynamically added
                Label:
                    text: "Hole 18"
                TextInput:
                    input_filter: 'int'
                    on_text: root.update_score(18, int(self.text) if self.text.isdigit() else 0)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10

            Label:
                text: "Total Score:"
                bold: True

            Label:
                text: str(root.total_score)

        Button:
            text: "Home"
            on_release: app.root.current = "home"  # Home button to go back to HomeScreen
