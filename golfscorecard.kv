<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Settings"
            font_size: 24
            size_hint_y: None
            height: 40

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 40
            Label:
                text: "Email:"  # Email label
                size_hint_x: 0.3
            TextInput:
                hint_text: "Enter your email"
                text: root.email  # Bind to the email property
                multiline: False
                on_text: root.email = self.text

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 40
            Label:
                text: "Handicap:"
                size_hint_x: 0.3
            TextInput:
                input_filter: 'int'
                hint_text: "Enter handicap"
                text: str(root.handicap)
                multiline: False
                on_text: root.handicap = int(self.text) if self.text.isdigit() else 0

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 40
            Label:
                text: "Select Course:"
                size_hint_x: 0.3
            Spinner:
                text: "Select Course"
                values: root.course_names if root.course_names else ["No Courses Available"]
                on_text: root.update_selected_course(self.text)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 40
            Label:
                text: "PIN Number:"
                size_hint_x: 0.3
            Label:
                text: root.pin_number  # Display the generated PIN here

        Button:
            text: "Save Settings"
            size_hint_y: None
            height: 50
            on_release: root.save_user_data()

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            spacing: 20
            Button:
                text: "Go"
                on_release: app.root.current = "score"
            Button:
                text: "Home"
                on_release: app.root.current = "home"  # Home button to go back to HomeScreen
