<GolfScorecard>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Label:
        text: "Golf Scorecard"
        font_size: 24
        bold: True

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        Label:
            text: "Player Name:"
            size_hint_x: 0.3

        TextInput:
            text: root.player_name
            on_text: root.player_name = self.text

    GridLayout:
        cols: 2
        spacing: 5
        size_hint_y: None
        height: self.minimum_height

        Label:
            text: "Hole"
            bold: True
        Label:
            text: "Score"
            bold: True

        # Score inputs for each hole
        Label:
            text: "Hole 1"
        TextInput:
            input_filter: 'int'
            on_text: root.update_score(1, int(self.text) if self.text.isdigit() else 0)

        Label:
            text: "Hole 2"
        TextInput:
            input_filter: 'int'
            on_text: root.update_score(2, int(self.text) if self.text.isdigit() else 0)

        # Add additional holes here...

        Label:
            text: "Hole 18"
        TextInput:
            input_filter: 'int'
            on_text: root.update_score(18, int(self.text) if self.text.isdigit() else 0)

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        Label:
            text: "Total Score:"
            bold: True

        Label:
            text: str(root.total_score)
