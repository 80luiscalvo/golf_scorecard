<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: app.theme.BACKGROUND_COLOR  # Reference the theme color from the app instance
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: "Home Screen"
            color: app.theme.TEXT_COLOR  # Use the theme's text color
            font_size: '24sp'

        Button:
            text: "Go to Settings"
            background_color: app.theme.MENU_COLOR
            color: app.theme.TEXT_COLOR
            on_release:
                app.root.current = 'settings'
